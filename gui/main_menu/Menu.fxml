<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="600.0" styleClass="menu-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.main_menu.MenuController">
   <center>
      <VBox alignment="CENTER" prefHeight="405.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#btnStartOnAction" prefHeight="45.0" prefWidth="190.0" styleClass="main-menu-button" text="Start Game">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <HBox alignment="TOP_CENTER" prefHeight="42.0" prefWidth="600.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnEasyOnAction" prefWidth="60.0" text="Easy">
                     <HBox.margin>
                        <Insets right="1.0" top="1.0" />
                     </HBox.margin></Button>
                  <Button mnemonicParsing="false" onAction="#btnNormalOnAction" prefWidth="60.0" text="Normal">
                     <HBox.margin>
                        <Insets right="1.0" top="1.0" />
                     </HBox.margin></Button>
                  <Button mnemonicParsing="false" onAction="#btnHardOnAction" prefWidth="60.0" text="Hard">
                     <HBox.margin>
                        <Insets top="1.0" />
                     </HBox.margin></Button>
               </children>
               <opaqueInsets>
                  <Insets top="2.0" />
               </opaqueInsets>
            </HBox>
            <Button disable="true" mnemonicParsing="false" onAction="#btnLeaderboardOnAction" prefHeight="45.0" prefWidth="190.0" styleClass="main-menu-button" text="Leaderboard">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnAboutOnAction" prefHeight="45.0" prefWidth="190.0" styleClass="main-menu-button" text="About">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnExitOnAction" prefHeight="45.0" prefWidth="190.0" styleClass="main-menu-button" text="Exit">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <ImageView fitHeight="284.0" fitWidth="231.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../sprites/logo.png" />
         </image>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
      </ImageView>
   </top>
</BorderPane>
